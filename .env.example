# 服务配置
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
DEBUG=false

# Neo4j配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# FAISS配置
FAISS_INDEX_PATH=data/faiss_index
VECTOR_DIMENSION=768

# 模型配置
TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEVICE=cpu  # 或 cuda，根据实际情况配置

# 记忆系统配置
REGULAR_MEMORY_TIMEOUT=604800  # 7天，单位：秒
MEMORY_BATCH_SIZE=100
MAX_MEMORY_SIZE=1000000
IMPORTANCE_THRESHOLD=7

# 性能配置
MAX_CONCURRENT_REQUESTS=100
CACHE_SIZE=10000
READ_TIMEOUT=5
WRITE_TIMEOUT=10

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level} | {message}"
LOG_PATH=logs/agent_memory.log
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# 安全配置
API_KEY=your-api-key-here
ENCRYPTION_KEY=your-encryption-key-here

# 系统配置
TEMP_DIR=data/temp  # 临时文件目录
BACKUP_DIR=data/backup  # 备份目录
FILE_LOCK_TIMEOUT=30  # 文件锁超时时间(秒)
PROCESS_TIMEOUT=300  # 进程超时时间(秒) 